<Page x:Class="Freed.Api.Monitor.View.ApiMonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Freed.Api.Monitor.View"
      mc:Ignorable="d" 
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApiMonitorPage">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding DoInit}" CommandParameter="{Binding ElementName=layout}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid x:Name="layout">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <Button Content="消息发送" Command="{Binding ClickNewCommand}"/>
        </Border>
        <Border Grid.Row="1">
            <RichTextBox x:Name="richMsg"  VerticalScrollBarVisibility="Auto" >
                <FlowDocument LineHeight="1"></FlowDocument>
            </RichTextBox>
        </Border>
    </Grid>
</Page>
